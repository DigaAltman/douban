/* components/itemview/itemview.wxss */
.item-navigator{
  width:200rpx;
  margin-right:20rpx;
  display: inline-block;
}
.item-navigator .item-group{
  width:100%;
}

.item-group .thumbnail-group{
  width:100%;
  height:284rpx;
}

.thumbnail-group .thumbnail{
  width:100%;
  height:100%;
}

.item-group .item-title{
  font-size:30rpx;
  text-align: center;
  text-overflow: ellipsis;
  overflow: hidden;
}
.rate-group{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size:20rpx;
  font-weight: bold;
  color:#494949;
}

.rate-group image{
  width:20rpx;
  height:20rpx;
}